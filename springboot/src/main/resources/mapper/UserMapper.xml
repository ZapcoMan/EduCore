<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 定义一个Mapper，命名空间为com.example.mapper.UserMapper -->
<mapper namespace="com.example.modules.system.mapper.UserMapper">

    <!--
        查询所有用户信息
        根据提供的条件进行筛选，支持按用户名和姓名模糊查询
        查询结果按ID降序排列
        @param username 用户名（可选），用于模糊匹配
        @param name 姓名（可选），用于模糊匹配
        @return User对象列表
     -->
    <select id="selectAll" resultType="com.example.modules.system.entity.User">
        <!-- 查询user表中的所有列 -->
        select * from `user`
        <!-- 动态生成where条件 -->
        <where>
            <!-- 如果username不为空，则添加模糊查询条件 -->
            <if test="username != null">username like concat('%', #{username}, '%')</if>
            <!-- 如果name不为空，则添加模糊查询条件 -->
            <if test="name != null">and name like concat('%', #{name}, '%')</if>  <!-- 相当于 name like '%1%' -->
        </where>
        <!-- 按照id降序排列 -->
        order by id desc
    </select>

    <!--
        插入新的用户信息
        @param username 用户名
        @param password 密码
        @param role 角色
        @param name 姓名
        @param avatar 头像
     -->
    <insert id="insert">
        <!-- 向user表中插入数据 -->
        insert into `user` (username, password, role, name, avatar)
        <!-- 使用占位符插入数据 -->
        values(#{username} , #{password}, #{role}, #{name}, #{avatar})
    </insert>

    <!--
        根据ID更新用户信息
        @param id 用户ID
        @param username 用户名
        @param password 密码
        @param role 角色
        @param name 姓名
        @param avatar 头像
     -->
    <update id="updateById">
        <!-- 更新user表中的数据 -->
        update `user` set username = #{username}, password = #{password}, role = #{role}, name = #{name}, avatar = #{avatar}
        <!-- 根据id进行条件更新 -->
        where id = #{id}
    </update>

    <!--
        根据用户名更新密码
        @param username 用户名
        @param password 新密码
     -->
    <update id="updatePassword">
        UPDATE user SET password = #{password} WHERE username = #{username}
    </update>
</mapper>
